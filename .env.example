# pretalx Version
# Set to a specific tag (e.g., v2024.1.0) or branch (e.g., main)
PRETALX_VERSION=main

# Use pre-built image or build locally
# Leave empty to build locally, or set to ghcr.io/pretalx/pretalx:latest
PRETALX_IMAGE=

# Database Configuration
# When COMPOSE_PROFILES includes local-db the bundled PostgreSQL service is started.
# Clear COMPOSE_PROFILES and set POSTGRES_HOST to connect to an external PostgreSQL instance.
COMPOSE_PROFILES=local-db
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=pretalx
POSTGRES_USER=pretalx
POSTGRES_PASSWORD=change_this_to_a_secure_password

# Site Configuration
PRETALX_SITE_URL=http://localhost:8080
PRETALX_SECRET_KEY=change_this_to_a_random_secret_key
PRETALX_PORT=8080

# Filesystem Configuration
# PRETALX_FILESYSTEM_MEDIA=/public/media
PRETALX_DATA_DIR=./data

# Gunicorn Configuration (Optional)
# GUNICORN_WORKERS=4
# GUNICORN_MAX_REQUESTS=1200
# GUNICORN_MAX_REQUESTS_JITTER=50
# GUNICORN_FORWARDED_ALLOW_IPS=*

# Mail Configuration (Optional)
PRETALX_MAIL_FROM=pretalx@example.com
PRETALX_MAIL_HOST=smtp.example.com
PRETALX_MAIL_PORT=587
PRETALX_MAIL_USER=
PRETALX_MAIL_PASSWORD=
PRETALX_MAIL_TLS=True
PRETALX_MAIL_SSL=False
